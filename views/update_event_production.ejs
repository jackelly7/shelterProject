    <header>
        <h1 style="background-color: #2D3A4F; color:#FBFAF7" >Update Event Production</h1>
    </header>

    <div class="form-container"  style="background-color: #F9F3E5;">
    <h2 style="font-size: 20px; font-weight: 100;">Update Production Details</h2>
        <form action="/update_event_production/<%= event.event_id %>" method="POST">

                <label for="item_type" style="font-weight: 150;">Item Type:</label>
                <select id="inventory_name" name="inventory_name"required>
                    <option value="">Select...</option>
                    <option value="vest" <%= event.inventory_name === 'vest' ? 'selected' : '' %>>Vest</option>
                    <option value="collar" <%= event.inventory_name === 'collar' ? 'selected' : '' %>>Collar</option>
                    <option value="envelope" <%= event.inventory_name === 'envelope' ? 'selected' : '' %>>Envelope</option>
                    <option value="pocket" <%= event.inventory_name === 'pocket' ? 'selected' : '' %>>Pocket</option>
                    <option value="fabric1_sqft" <%= event.inventory_name === 'fabric1_sqft' ? 'selected' : '' %>>Fabric 1 (sqft)</option>
                    <option value="fabric2_sqft" <%= event.inventory_name === 'fabric2_sqft' ? 'selected' : '' %>>Fabric 2 (sqft)</option>
                </select>
                
                <label for="inventory_size" class="form-label">Inventory Size:</label>
                <select id="inventory_size" name="inventory_size"required>
                    <option value="">Select...</option>
                    <option value="XXS" <%= event.inventory_size === 'XXS' ? 'selected' : '' %>>XXS</option>
                    <option value="XS" <%= event.inventory_size === 'XS' ? 'selected' : '' %>>XS</option>
                    <option value="S" <%= event.inventory_size === 'S' ? 'selected' : '' %>>S</option>
                    <option value="M" <%= event.inventory_size === 'M' ? 'selected' : '' %>>M</option>
                    <option value="L" <%= event.inventory_size === 'L' ? 'selected' : '' %>>L</option>
                    <option value="XL" <%= event.inventory_size === 'XL' ? 'selected' : '' %>>XL</option>
                    <option value="XXL" <%= event.inventory_size === 'XXL' ? 'selected' : '' %>>XXL</option>
                    <option value="XXXL" <%= event.inventory_size === 'XXXL' ? 'selected' : '' %>>XXXL</option>
                    <option value="XXXXL" <%= event.inventory_size === 'XXXXL' ? 'selected' : '' %>>XXXXL</option>
                    <option value="N/A" <%= event.inventory_size === 'N/A' ? 'selected' : '' %>>N/A</option>
                </select>



                <label for="item_count" class="form-label">Change in Item Count:</label>
                <input type="number" id="item_count" name="item_count" min="-10000" required>
                <small class="form-text text-muted">Use negative values to decrease the item count.</small>
        

                <label for="total_attendees_actual" class="form-label">Total Attendees Actual:</label>
                <input type="number" id="total_attendees_actual" name="total_attendees_actual" class="form-control" min="0" value="<%= event.total_attendees_actual %>" required>


                <label for="event_duration_actual" class="form-label">Event Duration Actual (hrs):</label>
                <input type="number" id="event_duration_actual" name="event_duration_actual" class="form-control" min="0" step="0.1" value="<%= event.event_duration_actual %>" required>


            <button type="submit" style="background-color: #457DD7; width:100%">Update Production</button>
        </form>
    </div>
</body>
