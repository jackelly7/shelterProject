    <div class="container">
        <h2 style="font-size: 20px; font-weight: 100;">Edit Event Form</h2>
        <form action="/edit_events/<%= events.event_id %>" method="POST">
            <!-- Your existing form fields, similar to request_event.ejs -->
            <label for="event_name" style="font-weight: 300;">UPDATE EVENT STATUS:</label>
            <select id="event_status" name="event_status" required>
                <option style="color: gray;" value="">Select an option</option>
                <option value="approved" <% if (events.event_status === 'approved') { %>selected<% } %>>Approved</option>
                <option value="pending" <% if (events.event_status === 'pending') { %>selected<% } %>>Pending</option>
                <option value="declined" <% if (events.event_status === 'declined') { %>selected<% } %>>Declined</option>
                <option value="completed" <% if (events.event_status === 'completed') { %>selected<% } %>>Completed</option>
            </select>
            
            <label for="event_name" style="font-weight: 150;">Event name:</label>
            <input type="text" id="event_name" name="event_name" value="<%= events.event_name %>" required>

            <label for="number_of_participants_expected" style="font-weight: 150;">Number of participants:</label>
            <input type="number" id="number_of_participants_expected" name="number_of_participants_expected" value="<%= events.number_of_participants_expected %>" required>

            <label for="event_type" style="font-weight: 150;">Event type:</label>
            <select id="event_type" name="event_type" required>
                <option style="color: gray;" value="">Select an option</option>
                <option value="sewing" <% if (events.event_type === 'sewing') { %>selected<% } %>>Sewing</option>
                <option value="non-sewing" <% if (events.event_type === 'non-sewing') { %>selected<% } %>>Non-sewing</option>
                <option value="both" <% if (events.type === 'both') { %>selected<% } %>>Both</option>
            </select>

            <label for="event_date_time" style="font-weight: 150;">Event date and time:</label>
            <input 
                type="datetime-local" 
                id="event_date_time" 
                name="event_date_time" 
                value="<%= new Date(events.event_date_time).toISOString().slice(0, 16) %>" 
                required
            >

            <label for="event_street_address" style="font-weight: 150;">Event address:</label>
            <input type="text" id="event_street_address" name="event_street_address" value="<%= events.event_street_address %>" required>

            <label for="event_city" style="font-weight: 150;">City:</label>
            <input type="text" id="event_city" name="event_city" value="<%= events.event_city %>" required>

            <label for="event_state" style="font-weight: 150;">State:</label>
            <select name="event_state" id="event_state" required>
                <% stateAbbreviations.forEach(function(state) { %>
                    <option value="<%= state %>" <% if (state === events.event_state) { %>selected<% } %>><%= state %></option>
                <% }); %>
            </select>

            <label for="event_zip" style="font-weight: 150;">Zip Code:</label>
            <input type="text" id="event_zip" name="event_zip" value="<%= events.event_zip %>" required>

            <button type="submit" style="background-color: #457DD7;">Submit Event Changes</button>
        </form>
