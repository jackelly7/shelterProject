    <!-- Login Form -->
    <div class="login-container">
        <h2 style="font-family: sans-serif; font-weight: 100; font-size: 24px; text-align: center;">TURTLE TEAM LOG IN</h2>
        <form action="/login" method="POST">
            <div class="form-group">
                <label for="username" style="font-family: sans-serif; font-weight: 100; font-size: 15.5px; text-align: left;">Username:</label>
                <input type="text" id="username" name="username" required />
            </div>
            <div class="form-group">
                <label for="password" style="font-family: sans-serif; font-weight: 100; font-size: 15.5px; text-align: left;">Password:</label>
                <input type="password" id="password" name="password" required />
            </div>
            <button type="submit" style="background-color: #457DD7; width: 100%;">Log In</button>
        </form>
        <p style="font-family: sans-serif; font-weight: 100; font-size: 13.5px; text-align: center;">Don't have an account? <a href="/signup">Sign up</a></p>
    </div>

    <!-- Footer: Using the same footer as the admin page -->
    <footer class="site-footer" style="height: 150px; position: relative; bottom: 0; left: 0; width: 100%; background-color: #1F2B3D; padding: 0;">
