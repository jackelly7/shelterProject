    <div class="form-container">
        <h2 style="font-size: 20px; font-weight: 100;">Edit Volunteer Info</h2>
        <form action="/edit_volunteer/<%= volunteers.vol_id %>" method="POST">

            <label for="volunteer_approved" style="font-weight: 150;">Volunteer approval:</label>
            <input type="text" id="volunteer_approved" name="volunteer_approved" value="<%= volunteers.volunteer_approved %>" required>

            <label for="volunteer_first_name" style="font-weight: 150;">Volunteer first name:</label>
            <input type="text" id="volunteer_first_name" name="volunteer_first_name" value="<%= volunteers.volunteer_first_name %>" required>
 
            <label for="volunteer_last_name" style="font-weight: 150;">Volunteer last name:</label>
            <input type="text" id="volunteer_last_name" name="volunteer_last_name" value="<%= volunteers.volunteer_last_name %>" required>
        
            <label for="volunteer_email" style="font-weight: 150;">Email:</label>
            <input type="text" id="volunteer_email" name="volunteer_email" value="<%= volunteers.volunteer_email %>" required>

            <label for="volunteer_phone" style="font-weight: 150;">Phone:</label>
            <input type="text" id="volunteer_phone" name="volunteer_phone" value="<%= volunteers.volunteer_phone %>" required>

            <label for="volunteer_city" style="font-weight: 150;">City:</label>
            <input type="text" id="volunteer_city" name="volunteer_city" value="<%= volunteers.volunteer_city %>" required>
    
            <label for="volunteer_state" style="font-weight: 150;">State:</label>
            <input type="text" id="volunteer_state" name="volunteer_state" value="<%= volunteers.volunteer_state %>" required>
    
            <label for="volunteer_preference" style="font-weight: 150;">Volunteer Type:</label>
                <select id="volunteer_preference" name="volunteer_preference" required>
                    <option style="color: gray;" value="">Select an option</option>
                    <option value="sewing" <% if (volunteers.volunteer_preference === 'sewing') { %>selected<% } %>>Sewing Assistance</option>
                    <option value="lead" <% if (volunteers.volunteer_preference === 'lead') { %>selected<% } %>>Event Lead</option>
                    <option value="support" <% if (volunteers.volunteer_preference === 'pending') { %>selected<% } %>>Support Staff</option>
                </select>

            <label for="volunteer_sewing_level" style="font-weight: 150;">Experience:</label>
                <select id="volunteer_sewing_level" name="volunteer_sewing_level" required>
                    <option style="color: gray;" value="">Select an option</option>
                    <option value="experienced" <% if (volunteers.volunteer_sewing_level === 'experienced') { %>selected<% } %>>Experienced</option>
                    <option value="beginner" <% if (volunteers.volunteer_sewing_level === 'beginner') { %>selected<% } %>>Beginner</option>
                    <option value="intermediate" <% if (volunteers.volunteer_sewing_level === 'intermediate') { %>selected<% } %>>Intermediate</option>
                </select>

            <label for="volunteer_enroll_date" style="font-weight: 150;">Start date:</label>
            <input type="date" id="volunteer_enroll_date" name="volunteer_enroll_date" value="<%= volunteers.volunteer_enroll_date %>" required>
 
 
            <label for="volunteer_hrs_monthly_availability" style="font-weight: 150;">Monthly Hr Commitment::</label>
            <input type="number" id="volunteer_hrs_monthly_availability" name="volunteer_hrs_monthly_availability" value="<%= volunteers.volunteer_hrs_monthly_availability %>" required>
 
 
            <label for="volunteer_how_heard" style="font-weight: 150;">Referral:</label>
            <input type="text" id="volunteer_how_heard" name="volunteer_how_heardy"  value="<%= volunteers.volunteer_how_heard %>" required>

            <button type="submit" style="background-color: #457DD7;">Submit Event Changes</button>
        </form>
