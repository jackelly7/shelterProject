    <div class="admin-container">
        <h1 style="color: #FBFAF7;">INVENTORY STATUS</h1>
        <h2 style="color: #FBFAF7; font-weight: 100;">please track how much inventory was used or purchased</h2>
        <table>
            <thead>
                <tr>
                    <th>Inventory Name</th>
                    <th>Quantity</th>
                    <th>Size</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% inventory.forEach(function(item) { %>
                <tr>
                    <td><%= item.inventory_name %></td>
                    <td><%= item.inventory_quantity %></td>
                    <td><%= item.inventory_size %></td>
                    <td>
                        <!-- Edit Button Trigger Modal -->
                        <div style="display: flex; justify-content: center;">
                        <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#editModal<%= item.inventory_id %>">
                            Edit
                        </button>
                        </div>
                    </td>
                </tr>

                <!-- Modal for Editing Inventory Quantity -->
                <div class="modal fade" id="editModal<%= item.inventory_id %>" tabindex="-1" aria-labelledby="editModalLabel<%= item.inventory_id %>" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="editModalLabel<%= item.inventory_id %>">Edit Inventory Quantity</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <form action="/update_inventory/<%= item.inventory_id %>" method="POST">
                                    <div class="mb-3">
                                        <label for="inventory_quantity" class="form-label">New Quantity</label>
                                        <input type="number" class="form-control" id="inventory_quantity" name="inventory_quantity" value="<%= item.inventory_quantity %>" required>
                                    </div>
                                    <button type="submit" class="btn btn-success">Update</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

                <% }); %>
            </tbody>
        </table>
    </div>

        <footer class="site-footer" style="height: 150px; position: relative; bottom: 0; left: 0; width: 100%; background-color: #1F2B3D; padding: 0; border-top: .5px solid #FBFAF7">
