    </head>
    <body>
        <!-- Navigation -->
        <nav class="navbar navbar-expand-lg navbar-light" id="mainNav" style="position: fixed; width: 100%; z-index: 100; background-color: #393939;">
            <div class="container px-4 px-lg-5">
                <a class="navbar-brand" href="/">
                    <img src="assets/favicon.png" alt="Logo" style="height: 40px; margin-right: 10px;">
                    TURTLE SHELTER PROJECT
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                    Menu
                    <i class="fas fa-bars"></i>
                </button>
                <div class="collapse navbar-collapse" id="navbarResponsive">
                    <ul class="navbar-nav ms-auto py-4 py-lg-0">
                        <li class="nav-item"><a class="nav-link px-lg-3 py-3 py-lg-4" href="/meet_jen">Manage Volunteers</a></li>
                        <li class="nav-item"><a class="nav-link px-lg-3 py-3 py-lg-4" href="/request_event">Manage Events</a></li>
                        <li class="nav-item"><a class="nav-link px-lg-3 py-3 py-lg-4" href="/admin">My Dashboard</a></li>
                    </ul>
                </div>
            </div>
        </nav>
        
        <div class="admin-container">
            <h1 style="color: white;">EVENT MANAGER</h1>
            <h2>Approved Events</h2>
            <table>
                <thead>
                    <tr>
                        <th>Event Name</th>
                        <th>Event Type</th>
                        <th>Participants</th>
                        <th>Date/Time</th>
                        <th>City/State</th>
                        <th>Jen's Story</th>
                        <th>Contact</th>
                        <th>Action</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    <% approvedEvents.forEach(events => { %>
                        <tr>
                            <td><%= events.event_name %></td>
                            <td><%= events.event_type %></td>
                            <td><%= events.number_of_participants_expected %></td>
                            <td><%= new Date(events.event_date_time).toLocaleString('en-US', { month: '2-digit', day: '2-digit', year: 'numeric', hour: '2-digit', minute: '2-digit' }) %></td>
                            <td><%= events.event_city %> <%= events.event_state %></td>
                            <td><%= events.event_jen_story %></td>
                            <td><%= events.event_contact_first_name %> <%= events.event_contact_last_name %>: <%= events.event_contact_phone %></td>
                            <td>
                                <a href="/edit_events/<%= events.event_id %>" class="btn btn-edit">Edit</a>
                                <a href="/delete_event/<%= events.event_id %>" class="btn btn-delete" onclick="return confirm('Are you sure you want to delete this event?');">Delete</a>
                            </td>
                            <td><%= events.event_status %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>

            <h2>Pending Events</h2>
            <table>
                <thead>
                    <tr>
                        <th>Event Name</th>
                        <th>Event Type</th>
                        <th>Participants</th>
                        <th>Date/Time</th>
                        <th>City/State</th>
                        <th>Jen's Story</th>
                        <th>Contact</th>
                        <th>Action</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    <% pendingEvents.forEach(events => { %>
                        <tr>
                            <td><%= events.event_name %></td>
                            <td><%= events.event_type %></td>
                            <td><%= events.number_of_participants_expected %></td>
                            <td><%= new Date(events.event_date_time).toLocaleString('en-US', { month: '2-digit', day: '2-digit', year: 'numeric', hour: '2-digit', minute: '2-digit' }) %></td>
                            <td><%= events.event_city %> <%= events.event_state %></td>
                            <td><%= events.event_jen_story %></td>
                            <td><%= events.event_contact_first_name %> <%= events.event_contact_last_name %>: <%= events.event_contact_phone %></td>
                            <td>
                                <a href="/edit_events/<%= events.event_id %>" class="btn btn-edit">Edit</a>
                                <a href="/delete_event/<%= events.event_id %>" class="btn btn-delete" onclick="return confirm('Are you sure you want to delete this event?');">Delete</a>
                            </td>
                            <td><%= events.event_status %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>

            <h2>Declined Events</h2>
            <table>
                <thead>
