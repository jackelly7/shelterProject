<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Event Production Report</title>
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/ourStyles.css">
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand" href="/">Turtle Shelter Project</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                Menu <i class="fas fa-bars"></i>
            </button>
        </div>
    </nav>

    <div class="container">
        <h1>Event Production Report</h1>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Event Name</th>
                    <th>Event Type</th>
                    <th>Participants</th>
                    <th>Date/Time</th>
                    <th>City/State</th>
                    <th>Jen's Story</th>
                    <th>Contact</th>
                    <th>Item Name</th> <!-- New column -->
                    <th>Item Size</th> <!-- New column -->
                    <th>Items Produced</th>
                    <th>Total Attendees Actual</th>
                    <th>Event Duration Actual</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% completedEvents.forEach(event => { %>
                    <tr>
                        <td><%= event.event_name %></td>
                        <td><%= event.event_type %></td>
                        <td><%= event.number_of_participants_expected %></td>
                        <td><%= new Date(event.event_date_time).toLocaleString('en-US', { month: '2-digit', day: '2-digit', year: 'numeric', hour: '2-digit', minute: '2-digit' }) %></td>
                        <td><%= event.event_city %>, <%= event.event_state %></td>
                        <td><%= event.event_jen_story %></td>
                        <td><%= event.event_contact_first_name %> <%= event.event_contact_last_name %>: <%= event.event_contact_phone %></td>
                        <td><%= event.inventory_name || 'N/A' %></td> <!-- Display inventory_name -->
                        <td><%= event.inventory_size || 'N/A' %></td> <!-- Display inventory_size -->
                        <td><%= event.item_count || 'N/A' %></td>
                        <td><%= event.total_attendees_actual || 'N/A' %></td>
                        <td><%= event.event_duration_actual || 'N/A' %></td>
                        <td>
                            <a href="/update_event_production/<%= event.event_id %>" class="btn btn-primary">Report</a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</body>
</html>
